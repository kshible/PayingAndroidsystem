<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    app:rowCount="3"
    tools:context=".ertActivity">

<TextView  android:text="text 1" android:textSize="15sp"
    android:id="@+id/x1"
    android:gravity="center"
    app:layout_rowWeight="1"
    app:layout_columnWeight="1"
    app:layout_columnSpan="2"
    android:background="@color/orange"
     />


    <TextView  android:text="text 2" android:textSize="15sp"
        android:id="@+id/x2"
        app:layout_rowWeight="1"
        app:layout_columnWeight="1"
        android:background="@color/green"
        android:gravity="center"
        app:layout_rowSpan="2"
        />

    <TextView  android:text="text 3" android:textSize="15sp"
        android:id="@+id/x3"
        android:background="@color/blue"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_columnWeight="1"
        />

    <TextView  android:text="text 4" android:textSize="15sp"
        android:id="@+id/x4"
        app:layout_rowWeight="1"
        android:gravity="center"
        android:background="@color/yellow"
        app:layout_columnWeight="1"/>


</androidx.gridlayout.widget.GridLayout>